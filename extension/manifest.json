{
  "manifest_version": 3,
  "name": "Time Tracker Extension",
  "version": "1.0.0",
  "description": "A beautiful Chrome extension to track time with glassmorphism design",
  "permissions": [
    "storage",
    "contextMenus",
    "notifications"
  ],
  "host_permissions": [
    "http://localhost:5000/*",
    "http://localhost:3000/*",
    "https://time-tracker-nust.onrender.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Time Tracker"
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}